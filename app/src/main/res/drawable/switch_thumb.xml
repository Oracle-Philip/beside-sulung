<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#AACC55" />
            <solid android:color="@color/setting_noti_white" />
            <size android:width="28dp" android:height="28dp" /> <!-- 토글 버튼의 크기 -->
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#DDDDDD" />
            <solid android:color="@color/setting_noti_white" />
            <size android:width="28dp" android:height="28dp" />
        </shape>
    </item>
</selector>

