<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exitIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:text="@string/filter_dtl"
        android:textAlignment="center"
        android:textColor="#343434"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exitIcon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:text="@string/alchohol"
        android:textAlignment="center"
        android:textColor="#797979"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:text="@string/feeling"
        android:textAlignment="center"
        android:textColor="#797979"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/alcohol_group"
        app:layout_constraintTop_toBottomOf="@+id/alcohol_group" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_btn"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:outlineProvider="none"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn"
        android:enabled="false"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        android:text="@string/reset"
        android:textColor="@color/btn_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feeling_group" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adjust_btn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:outlineProvider="none"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        android:text="@string/adjust"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feeling_group" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/alcohol_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="전체"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="소주"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="맥주"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="막걸리"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="양주"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="칵테일"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="와인"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="사케"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="샴페인"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="하이볼"
            android:textColor="@color/black" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/feeling_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/alcohol_group"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="전체"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="기쁨"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="슬픔"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="우울"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="화남"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="평온"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="축하"
            android:textColor="@color/black" />

        <com.google.android.material.chip.Chip
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="취함"
            android:textColor="@color/black" />
    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>