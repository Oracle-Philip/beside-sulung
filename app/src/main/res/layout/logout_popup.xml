<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_border3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/ic_logout_exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:text="로그아웃"
        android:textColor="@color/logout_title"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendard_regular"
        android:includeFontPadding="false"
        android:text="로그아웃 하시겠습니까?"
        android:textColor="@color/logout_content"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:outlineProvider="none"
            android:layout_marginEnd="8dp"
            android:layout_weight="3"
            android:background="@drawable/bg_rounded_border4"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:text="아니오"
            android:textColor="@color/logout_title"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:outlineProvider="none"
            android:layout_weight="5"
            android:background="@drawable/btn"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:text="로그아웃"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>